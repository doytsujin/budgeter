(function() {
  document.querySelector("[data-container-for='modal'] .modal").classList.remove("is-active")

  let row = document.querySelector("tr[data-sub-category-id='<%= @sub_category.id %>']")
  row.innerHTML = "<%= j render @sub_category %>"

  document.querySelector("[data-category-id='<%= @sub_category.category.id %>'] .category-budget").
    innerHTML = "<%= number_to_currency @sub_category.category.budget %>"
})()

